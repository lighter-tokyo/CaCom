<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="monepla.co.jp.kkb.View.CategoryFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/category_linear_layout"
        android:padding="@dimen/content_margin"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:gravity="left"
            android:textSize="32sp"
            android:id="@+id/category_type"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="right"
            android:textSize="32sp"
            android:id="@+id/category_amount"
             />

    </LinearLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_margin="@dimen/content_margin"
        android:id="@+id/category_text_input"
        android:layout_below="@+id/category_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <android.support.v7.widget.AppCompatEditText
        android:id="@+id/category_detail_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/detail"/>
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/category_text_input"
        android:textSize="32sp"
        android:gravity="right"
        android:id="@+id/date_picker_text"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinner_liner"
        android:layout_below="@+id/date_picker_text"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/category_origin"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/category_category">

        </TextView>
    </LinearLayout>
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/category_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spinner_liner"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_margin="@dimen/content_margin"
        android:padding="4dp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorGreen"
        android:text="@string/login_register_button"
        android:layout_gravity="center" />

</RelativeLayout>
