<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/category_fragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">




    <!-- this is the item front view -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/row_drawable"
        android:padding="8dp"
        android:layout_margin="@dimen/row_margin">


        <TextView
            android:id="@+id/row_category_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:visibility="gone" />

        <TextView
            android:id="@+id/row_category_name"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/row_category_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="32sp" />

    </RelativeLayout>



</FrameLayout>